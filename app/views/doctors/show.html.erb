<h1> <%= @doctor.name %> </h1>

<h1> <%= @doctor.department %> </h1>

<ul>
<h3> <% @doctor.appointments.each do |appt| %> </h3>
        <li><%= appt.appointment_datetime.strftime("%B %e, %Y") + " at " + appt.appointment_datetime.strftime("%H:%M") %></li>
        <%=link_to appt.patient.name , patient_path(appt.patient)%>
        <br><br>

    <% end %>
</ul>    